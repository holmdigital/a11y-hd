{
    "manifest_version": 3,
    "name": "HolmDigital Accessibility Scanner",
    "version": "0.3.1",
    "description": "Scan web pages for accessibility violations with WCAG, EN 301 549, and Swedish DOS-lagen compliance mapping.",
    "author": "Holm Digital AB",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "src/popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png"
        },
        "default_title": "HolmDigital A11y Scanner"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "background": {
        "service_worker": "src/background/service-worker.ts",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content/overlay.ts"
            ],
            "css": [
                "src/content/overlay.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "icons/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}